    "@wisesama/database": "workspace:*",
    "@wisesama/types": "workspace:*",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.25.5",
    "dotenv": "^16.4.5",
    "fastify": "^5.1.0",
    "fastest-levenshtein": "^1.0.16",
