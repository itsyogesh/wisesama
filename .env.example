# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wisesama

# ======================
# Upstash Redis (for caching & rate limiting)
# Get these from: https://console.upstash.com
# ======================
UPSTASH_REDIS_REST_URL=https://xxx.upstash.io
UPSTASH_REDIS_REST_TOKEN=xxxxx

# ======================
# Upstash QStash (for background jobs)
# Get these from: https://console.upstash.com/qstash
# ======================
QSTASH_CURRENT_SIGNING_KEY=sig_xxxxx
QSTASH_NEXT_SIGNING_KEY=sig_xxxxx

# ======================
# JWT Authentication
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ======================
# Polkadot RPC Endpoints
# ======================
POLKADOT_RPC=wss://rpc.polkadot.io
KUSAMA_RPC=wss://kusama-rpc.polkadot.io
ASTAR_RPC=wss://rpc.astar.network

# ======================
# Email (Resend)
# ======================
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=Wisesama <noreply@wisesama.com>
ADMIN_ALERT_EMAIL=admin@wisesama.com
APP_URL=https://wisesama.com
ADMIN_APP_URL=https://admin.wisesama.com

# ======================
# GitHub (for community contributions)
# ======================
GITHUB_TOKEN=ghp_xxxxx
GITHUB_FORK_OWNER=your-github-username

# ======================
# Subscan API (optional)
# ======================
SUBSCAN_API_KEY=your-subscan-api-key

# ======================
# App Configuration
# ======================
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info
TRUST_PROXY=false

# ======================
# CORS (comma-separated origins)
# ======================
CORS_ORIGIN=http://localhost:3000

# ======================
# Frontend
# ======================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_IMAGE_ALLOWED_HOSTS=wisesama.com,assets.wisesama.com
