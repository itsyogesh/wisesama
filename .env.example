# ======================
# Database
# ======================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/wisesama

# ======================
# Redis
# ======================
REDIS_URL=redis://localhost:6379

# ======================
# JWT Authentication
# ======================
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# ======================
# Polkadot RPC Endpoints
# ======================
POLKADOT_RPC=wss://rpc.polkadot.io
KUSAMA_RPC=wss://kusama-rpc.polkadot.io
ASTAR_RPC=wss://rpc.astar.network

# ======================
# Email (Resend)
# ======================
RESEND_API_KEY=re_xxxxx
RESEND_FROM_EMAIL=alerts@wisesama.io

# ======================
# Subscan API (optional)
# ======================
SUBSCAN_API_KEY=your-subscan-api-key

# ======================
# App Configuration
# ======================
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# ======================
# CORS (comma-separated origins)
# ======================
CORS_ORIGIN=http://localhost:3000

# ======================
# Frontend
# ======================
NEXT_PUBLIC_API_URL=http://localhost:3001
